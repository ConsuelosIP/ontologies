	rdfs:domain ppn:Person ;
	rdfs:range ppn:Peerage ;
	rdf:isDefinedBy <http://parliament.uk/ontologies/person-name/> .
	
ppn:peerageHasPeerageLevel rdf:type owl:ObjectProperty ;
	rdfs:label "peerageHasPeerageLevel"@en ;
	rdfs:comment ""@en ;
	rdfs:domain ppn:Peerage ;
	rdfs:range ppn:PeerageLevel ;
	rdf:isDefinedBy <http://parliament.uk/ontologies/person-name/> .
	
ppn:hasPeerageJurisdiction rdf:type owl:ObjectProperty ;
